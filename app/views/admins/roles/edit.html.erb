<% content_for :title, "Edit #{format_name(@role.name)}" %>

<% content_for :active, 'roles' %>

<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "admins/roles", media: "all" %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_pack_tag 'admins/roles_edit' %>
<% end %>

<main class="mt-3">
  <section class="form-container sm-w-95 md-w-90 lg-w-70 m-center">
    <h2 class="h3 secondary text-center mt-3 mb-3">
      Edit <%=format_name(@role.name) %>
    </h2>
    <%= render partial: 'shared/errors', :locals =>
                                          { :obj => @role, :action => 'updated' } %>
    <%= form_for @role, :remote => true, :html => { :novalidate => "true" } do |f| %>
      <dl class="mb-1">
        <dt class="v-center">
          <%= f.label :name do %>
            Name <span>*</span>
          <% end %>
        </dt>
        <dd class="mb-1">
          <%= f.text_field :name, :class => 'd-inline-block lg-w-50', :required => true %>
        </dd>
        <dt class="v-center">
          <%= f.label :description do %>
            Description <span>*</span>
          <% end %>
        </dt>
        <dd class="mb-1">
          <%= f.text_area :description, :class => 'w-100', :required => true %>
        </dd>
        <dt class="v-center">
          <%= f.label :deletable do %>
            Deletable <span>*</span>
          <% end %>
        </dt>
        <dd class="mb-1"><%= f.select :deletable, options_for_select([true, false], :selected => (@role.deletable)) %></dd>
        <dt></dt>
        <dd>* Denotes a required field</dd>
      </dl>
      <%= f.submit 'Submit', :class => 'btn sm-w-100 md-w-25' %>
      <%= link_to "Delete #{format_name(@role.name)}", role_path(@role),
            :method => :delete,
            :data => {
              :confirm => 'Are you sure? This will also delete all linked records.'
            },
            :class => "btn danger sm-w-100 md-w-25 text-center mb-2 mt-1" %>
    <% end %>
  </section>
</main>
