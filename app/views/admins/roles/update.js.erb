<% if flash[:error].present? %>
  document.querySelector('section.error').innerHTML = ("<%= j render(:partial =>
    'shared/errors', :locals => { :obj => @role, :action => 'updated' }) %>");

  document.querySelector('.flash-messages').innerHTML =
    '<div class="error" data-dismissible="true">There was an error updating the <%= format_name(@role.name) %> role. <a href="#" data-dismiss="close">close</a></div>';
<% else %>
  window.location.href = "<%= roles_path %>"
  document.querySelector('.flash-messages').innerHTML =
  '<div class="success" data-dismissible="true"> <%= format_name(@role.name) %> role has been updated. <a href="#" data-dismiss="close">close</a></div>';
<% end %>
