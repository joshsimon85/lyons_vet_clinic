<% if flash[:error].present? %>
  document.querySelector('.flash-messages').innerHTML =
    '<div class="error" data-dismissible="true">There was an error creating the' +
    ' role. <a href="#" data-dismiss="close">close</a></div>';

  document.querySelector('section.error').innerHTML = ("<%= j render(:partial =>
    'shared/errors', :locals => { :obj => @role, :action => 'created' }) %>");
<% else %>
  window.location.href = "<%= roles_path %>"
  document.querySelector('.flash-messages').innerHTML =
  '<div class="success" data-dismissible="true">The role has been ' +
  'successfully created. <a href="#" data-dismiss="close">close</a></div>';
<% end %>
