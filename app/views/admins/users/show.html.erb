<% content_for :title, @user.name %>

<% content_for :active, 'users' %>

<% content_for :javascripts do %>
  <%= javascript_pack_tag 'admins/main' %>
<% end %>

<main class="mt-3">
  <section class="show-container sm-w-95 md-w-90 lg-w-70 m-center">
    <h2 class="h3 secondary text-center mt-3 mb-3">Create A New User</h2>

    <dl class="mb-1">
      <dl class="d-inline-block mb-1 sm-w-25 md-w-25 lg-w-15">
        <dt class="bold fs-1">Full Name</dt>
        <dd class="mb-1"><%= @user.name %></dd>
      </dl>
      <dl class="d-inline-block mb-1 sm-w-25 md-w-25 lg-w-15">
        <dt class="bold">Email</dt>
        <dd class="mb-1"><%= @user.email %></dd>
      </dl>
      <dl class="d-inline-block mb-1 lg-w-15">
        <dt class="bold">Role</dt>
        <dd class="mb-1"><%= @user.role %></dd>
      </dl>
      <dl class="d-inline-block mb-1 sm-w-100 lg-w-15">
        <dt class="bold">Position</dt>
        <dd class="mb-1"><%= @user.title %></dd>
      </dl>
      <dl class="mb-2">
        <dt class="bold">Description</dt>
        <dd class="mb-1"><%= @user.about %></dd>
      </dl>
      <dl>
        <% if @user.image.attached? %>
          <dt class="bold">Profile Image</dt>
          <dd class="mb-1"><%= image_tag @user.image.variant(resize_to_limit: [nil, 450])  %></dd>
        <% end %>
      </dl>
    </dl>
    <div class="actions">
      <%= link_to "Edit #{@user.name}", edit_user_path(@user.model),
        :class => "btn text-center mt-1 lg-w-35 md-w-100 sm-w-100" %>
      <%= link_to "Cancel", users_path,
        :class => "btn text-center mt-1 lg-w-35 md-w-100 sm-w-100" %>
      <%= link_to "Delete #{@user.name}", user_path(@user.model),
        :method => :delete,
        :data => {
          :remote => false,
          :confirm => "Are you sure you want to delete #{@user.name}?"
        },
        :class => "btn danger sm-w-100 text-center mb-2 mt-1 lg-w-35 md-w-100" %>
    </div>
  </section>
</main>
