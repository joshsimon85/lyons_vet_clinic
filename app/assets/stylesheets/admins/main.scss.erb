.h3 {
	font-size: 2rem;
}

thead {
	border-bottom: 2px solid #cecece;
	th {
		font-size: 1.25rem;
		font-weight: 700;
		padding-bottom: 10px;
	}
}

tbody {
	td {
		padding: 1rem 0;
	}
	tr {
		border-bottom: 1px solid #cecece;
		font-size: 1rem;
	}
	tr:last-of-type {
		border-bottom: none;
	}
}

.modal-overlay {
	background: rgba(0,0,0,0.5);
	position: fixed;
	top: 0;
	right: 0;
	width: 100%;
	height: 100%;
	z-index: 50;
}

.form-container {
	background: #fff;
	border-radius: 4px;
	padding: 0 2rem;
	dt {
		margin-bottom: 0.5rem;
	}

  input[type="text"], input[type="email"], textarea {
    font-size: 1rem;
    padding: .5rem 5px;
  }
  textarea {
    height: 200px;
  }
}

.modal {
	position: fixed;
	top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
	z-index: 51;
	[data-target="close-modal"] {
		position: absolute;
		top: 1.75rem;
		right: 2.5rem;
		height: 20px;
		width: 20px;
		img {
			height: 20px;
			width: 20px;
		}
	}
}

@media (min-width: 0px) {
	table {
    tr {
      td:nth-of-type(1n+4), th:nth-of-type(1n+4) {
        display: none;
      }
    }
  }
}

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) {
	table {
    tr {
      td:nth-of-type(1n+4), th:nth-of-type(1n+4) {
        display: inline-block;
      }
    }
  }
}


// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
	.form-container {
		dl {
			display: grid;
			grid-template-columns: 20% 80%;
			dt, dd {
				margin-bottom: 1rem;
			}
		}
		input[type="submit"] {
			margin-left: 20%;
		}
	}
}

