aside.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

dl.generic {
  dt {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: .5rem;
  }
  dd {
    font-size: 1.1rem;
  }
}

dl.generic:nth-of-type(3) {
  margin-right: 0;
}

section.linked-users {
  dl {
    margin-right: 2rem;
  }
  dl:last-of-type {
    margin-right: 0;
  }
}

section.linked-users > div {
  margin-bottom: 1rem;
  padding: .5rem 0;
}

section.linked-users > div:nth-of-type(2n+1) {
  background-color: #E8E8E8;
}

section.linked-users > div:last-of-type {
  margin-bottom: 3rem;
}

@media (min-width: 0px) {
  section.linked-users > div {
    dl {
      margin-bottom: 1rem;
    }
    dl:last-of-type {
      margin-bottom: 0;
    }
  }
}

@media (min-width: 768px) {
  section.linked-users > div {
    dl {
      margin-bottom: 0;
    }
  }
}
