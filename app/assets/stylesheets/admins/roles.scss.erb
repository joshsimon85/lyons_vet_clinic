@media (min-width: 0px) {
  table {
    tr {
      td:nth-of-type(1n+4), th:nth-of-type(1n+4) {
        display: none;
      }
    }
  }
}

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) {
  table {
    tr {
      td:nth-of-type(1n+4), th:nth-of-type(1n+4) {
        display: inline-block;
      }
    }
  }
}


