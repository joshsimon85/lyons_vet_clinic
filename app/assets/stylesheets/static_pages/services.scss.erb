// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  main {
    section:first-of-type {
      display: none;
    }
    section:nth-of-type(2) {
      margin-top: 6rem;
    }
    section:nth-of-type(3) {
      ul {
        li {
          grid-template-columns: repeat(2, 1fr);
          grid-column-gap: 2rem;
          padding: 2rem 3rem;
          img {
            margin: 0;
            width: 80%;
          }
          h3 {
            margin-top: 0;
            text-align: left;
          }
        }
      }
    }
  }
}

