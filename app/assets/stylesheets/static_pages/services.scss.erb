header {
  background: url(<%= asset_url('dog_at_vet.jpg') %>)
    center center / 100% auto
    no-repeat
    content-box;
}

main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(1) {
    background-image: url(<%= asset_path('dog_at_vet.jpeg') %>);
    background-position: right;
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 2rem auto;
    padding: .25rem .75rem;
    text-align: left;
    width: 88%;
    div {
      border: 2px solid #fff;
      line-height: 1.25;
      padding: 1rem 1.5rem;
      p:first-of-type {
        margin-bottom: 1rem;
      }
    }
  }
  section:nth-of-type(3) {
    margin-bottom: 20px;
    ul {
      width: 88%;
      margin: 0 auto;
      li:first-of-type {
        border-top: 1px solid #C8C6C6;
      }
      li:last-of-type {
        border-bottom: none;
      }
      li {
        display: grid;
        grid-template-columns: 1fr;
        border-bottom: 1px solid #C8C6C6;
        padding: 2rem 0;
        img {
          border-radius: 10px;
          margin: 0 auto 1rem auto;
          display: inline-block;
        }
        h3 {
          margin: .5rem 0;
          text-align: center;
        }
        p {
          line-height: 1.25;
        }
      }
    }
  }
}

