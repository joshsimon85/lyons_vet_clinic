// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  main {
    section:first-of-type {
      display: none;
    }
    section:nth-of-type(2) {
      display: grid;
      grid-template-columns: 30% 70%;
      margin: 1.75rem 3rem;
      aside:first-of-type {
        display: block;
        padding: 0;
        width: 80%;
        ul {
          padding: 1rem;
          li.active {
            display: grid;
            font-size: 1.5rem;
            font-weight: bold;
            grid-template-columns: 13% 87%;
          }
          li {
            align-items: center;
            margin: 0 0 1.75rem 0;
            a {
              background: transparent;
              color: #fff;
              font-size: 1.4rem;
            }
            span {
              img {
                bottom: 3px;
              }
            }
          }
        }
      }
    }
  }
}

