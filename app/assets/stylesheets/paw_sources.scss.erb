section:nth-of-type(2) aside:first-of-type .active span {
  display: inline-block;
}

main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(1) {
    position: relative;
    z-index: -1;
    img {
      display: inline-block;
      width: 100%;
    }
  }
  section:nth-of-type(2) {
    margin: 0 1%;
    aside:first-of-type {
      background: rgba(149,158,203,0.9);
    }
  }
  aside:first-of-type {
    ul {
      padding: .25rem 1rem;
      li.active {
        font-weight: bold;
      }
      li {
        display: inline-block;
        margin: .25rem .5rem;
        a {
          background: transparent;
          color: #fff;
        }
        span {
          display: none;
          height: 18px;
          margin-right: .1rem;
          width: 18px;
          img {
            display: inline-block;
            height: 18px;
            position: relative;
            bottom: -3px;
            width: 18px;
          }
        }
      }
    }
  }
  aside:nth-of-type(2) {
    img {
      display: inline-block;
      width: 100%;
    }
    img + img {
      display: none;
    }
  }
}

