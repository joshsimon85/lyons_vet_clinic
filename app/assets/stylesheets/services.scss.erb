main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(1) {
    position: relative;
    z-index: -1;
    img {
      display: inline-block;
      width: 100%;
    }
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 1rem auto;
    padding: .25rem .75rem;
    text-align: left;
    width: 88%;
    div {
      border: 2px solid #fff;
      padding: 1rem 1.5rem;
      p:first-of-type {
        margin-bottom: 1rem;
      }
    }
  }
  section:nth-of-type(3) {
    margin-bottom: 20px;
    ul {
      width: 88%;
      margin: 0 auto;
      li {
        display: grid;
        grid-template-columns: 1fr;
        border-bottom: 1px solid #B6B6B6;
        border-top: 1px solid #B6B6B6;
        padding: 2rem 0;
        img {
          margin: 0 auto;
          display: inline-block;
          max-width: 200px;
        }
        h3 {
          margin: .5rem 0;
          text-align: center;
        }
      }
    }
  }
}

