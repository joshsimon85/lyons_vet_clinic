header {
  position: relative;
  h2 {
    background: transparent;
    color: white;
    position: absolute;
    bottom: 5%;
    text-align: center;
    width: 100%;
  }
}

main {
  position: relative;
  z-index: -1;
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 1rem auto;
    padding: .25rem .75rem;
    text-align: left;
    width: 88%;
    div {
      border: 2px solid #fff;
      padding: 1rem 1.5rem;
      p:first-of-type {
        margin-bottom: 1rem;
      }
    }
  }
  section:nth-of-type(3) {
    ul {
      li {
        border-bottom: 1px solid #B6B6B6;
        border-top: 1px solid #B6B6B6;
        img {
          display: inline-block;
          max-width: 200px;
        }
      }
    }
  }
}
