@media (min-width: 992px) {
  main {
    section:first-of-type {
      display: none;
    }
    section:nth-of-type(3) {
      ul {
        li {
          grid-template-columns: 30% 70%;
          padding-left: 4rem;
          padding-right: 4rem;
          img {
            margin: 0;
          }
          h3 {
            margin-top: 0;
            text-align: left;
          }
        }
      }
    }
  }
}

