.invalid {
  border: 1px solid red;
}

label.invalid {
  color: red;
}

.error_message {
  color: red;
}

header {
  background: url(<%= asset_url('dog_barking.jpg') %>)
    center center / 100% auto
    no-repeat
    content-box;
}

main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(1) {
    background-image: url(<%= asset_path('dog_barking.jpg') %>);
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 2rem auto;
    padding: 2rem 1rem;
    width: 88%;
    form {
      button[type="submit"] {
        background: #4E5EA9;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-size: 1rem;
        padding: .5rem 0;
        width: 200px;
      }
      button[type="submit"]:focus {
        outline: none;
      }
      dl {
        dt, dd {
          margin-bottom: 1rem;
        }
        dd {
          input:focus, textarea:focus {
            border: 2px solid #4E5EA9;
            outline: none;
          }
          input {
            background: #fff;
            font-size: 1rem;
            height: 2.5rem;
            padding: 0 .5rem;
            width: 100%;
          }
        }
        textarea {
          font-size: 1rem;
          padding: .5rem;
          width: 100%;
        }
      }
    }
  }
}

