main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  section:nth-of-type(1) {
    position: relative;
    z-index: -1;
    img {
      display: inline-block;
      width: 100%;
    }
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 2rem auto;
    padding: 2rem 1rem;
    width: 88%;
    form {
      button[type="submit"] {
        background: #4E5EA9;
        border-radius: 5px;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-size: 1rem;
        padding: .5rem 0;
        width: 200px;
      }
      button[type="submit"]:focus {
        outline: none;
      }
      dl {
        dt, dd {
          margin-bottom: 1rem;
        }
        dd {
          input:focus, textarea:focus {
            outline: 2px solid #4E5EA9;
          }
          input {
            background: #fff;
            font-size: 1rem;
            height: 2.5rem;
            padding: 0 .5rem;
            width: 50%;
          }
        }
        textarea {
          font-size: 1rem;
          padding: .5rem;
          width: 100%;
        }
      }
    }
  }
}

