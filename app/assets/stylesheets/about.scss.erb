// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  main {
    h3 {
      text-align: left;
    }
    h4 {
      margin-top: 0;
      text-align: left;
    }
    section:first-of-type {
      display: none;
    }
    ul {
      li {
        grid-template-columns: repeat(2, 1fr);
        grid-column-gap: 2rem;
        img {
          margin: 0;
        }
      }
    }
  }
}

