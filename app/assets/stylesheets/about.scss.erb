main {
  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }
  h3 {
    margin: 1rem auto;
    text-align: center;
    width: 80%;
  }
  h4 {
    margin: 1rem 0;
    text-align: center;
  }
  section:nth-of-type(1) {
    position: relative;
    z-index: -1;
    img {
      display: inline-block;
      width: 100%;
    }
  }
  section:nth-of-type(2) {
    background-color: #D1CBDA;
    margin: 2rem auto;
    padding: .25rem .75rem;
    text-align: left;
    width: 88%;
    h3{
      text-align: center;
      margin-top: 0;
      
    }
    div {
      border: 2px solid #fff;
      padding: 1rem 1.5rem;
    }
  }
  ul {
    margin: 0 auto;
    width: 80%;
    img {
      display: inline-block;
      margin: 0 auto;
    }
    li {
      border-bottom: 2px solid #C8C6C6;
      border-top: 2px solid #C8C6C6;
      display: grid;
      grid-template-columns: 1fr;
      padding: 2rem 3rem;
    }
    li:last-of-type {
      border-bottom: none;
    }
  }
}

