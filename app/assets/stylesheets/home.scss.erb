header {
  background: url(<%= asset_url('store_front.jpg') %>)
    top center / 100% auto
    no-repeat
    content-box;
}

main {
  [data-id="prev"], [data-id="next"] {
    background: transparent;
    display: none;
    position: absolute;
    top: 45%;
    width: 40px;
  }

  [data-id="prev"] {
    left: -4%;
  }

  [data-id="next"] {
    right: -4%;
  }

  .slider {
    .actions {
      a {
        color: #cccccc;
        font-size: 30px;
      }
      a.active {
        color: #4F4F4F;
      }
    }
  }

  h2 {
    background: transparent;
    color: white;
    text-align: center;
    position: absolute;
    top: 35%;
    left: 25%;
    width: 50%;
  }

  section:first-of-type {
    background-image: url(<%= asset_path('store_front.jpeg') %>);
    background-position: 28%;
  }

  section:nth-of-type(2) {
    text-align: center;
  }

  section:nth-of-type(2) img {
    width: 100%;
  }

  section:nth-of-type(3) {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    margin: 0 auto;
    width: 80%;
    img {
      display: inline-block;
    }
    aside {
      background: #EEF6E6;
      display: inline-block;
      text-align: center;
      padding: 60px 10px 0px 10px;

      h3 {
        margin-bottom: 25px;
      }
    }
    figure {
      img {
        display: inline-block;
        width: 100%;
      }
    }
  }

  section:nth-of-type(4) {
    margin: 0 auto;
    max-width: 58rem;
    ul {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      justify-content: center;
      li {
        height: 5rem;
        background-image: url(<%= asset_path('logo.png') %>);
        background-size: auto 100%;
        background-position: center;
        background-repeat: no-repeat;
        text-align: center;
        margin-bottom: 1rem;

        a {
          color: black;
          font-size: 1.25rem;
          font-weight: 700;
          position: relative;
          top: 2rem;
        }
      }
      li:last-of-type {
        margin-bottom: 0;
      }
    }
  }
}

@media (min-width: 0px) {
  header + hr {
    display: none;
  }
  main {
    section:nth-of-type(3) {
      grid-template-columns: 1fr;
      aside {
        padding-bottom: 1rem;
        padding-top: 1rem;
      }
      figure {
        margin: 0 auto;
        width: 70%;
      }
    }
  }
}

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) {
  main {
    section:nth-of-type(4) {
      ul {
        grid-template-columns: repeat(4, 1fr);
        li {
          height: 6rem;
          margin-bottom: 0;
        }
        li:nth-of-type(1n+5) {
          display: none;
        }
      }
    }
  }
}


// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {

}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  header + hr {
    display: block;
  }
  main {
    .slider {
      position: relative;
    }

    [data-id="prev"], [data-id="next"] {
      display: inline-block;
    }
    section:first-of-type {
      display: none;
    }
    section:nth-of-type(3) {
      grid-template-columns: repeat(2, 1fr);
      aside {
        padding: 60px 10px 0px 10px;
      }
      figure {
        margin: 0;
        width: 100%;
      }
    }
    section:nth-of-type(4) {
      ul {
        li {
          height: 7.5rem;
          margin-bottom: 0;
        }
      }
    }
  }
}

