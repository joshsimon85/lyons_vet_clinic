// Whitespace reset
  /* http://meyerweb.com/eric/tools/css/reset/
    v2.0 | 20110126
    License: none (public domain)
  */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	 margin: 0;
	 padding: 0;
	 border: 0;
	 font-size: 100%;
	 font: inherit;
	 vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
	 display: block;
}
body {
	 line-height: 1;
}
ol, ul {
	 list-style: none;
}
blockquote, q {
	 quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	 content: '';
	 content: none;
}
table {
	 border-collapse: collapse;
	 border-spacing: 0;
}

// Box sizing reset
html {
  box-sizing: border-box;
  font-size: 16px;
}
*, *:before, *:after {
  box-sizing: inherit;
}

// fonts
//@import url('https://fonts.googleapis.com/css?family=Handlee&display=swap');

// global
body {
	font-family: 'Karla', 'Roboto', sans-serif;
	position: relative;
	z-index: 0;
}

a {
  text-decoration: none;
}

h1 {
	font-size: 3rem;
}

h2 {
	font-size: 2.5rem;
}

h3 {
	font-size: 1.5rem;
}

h4 {
	font-size: 1.25rem;
}

hr {
	background-color: black;
	height: 3px;
	margin: 2% 6%;
}

.box-shadow {
	box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
}
.text-shadow {
	text-shadow: 4px 4px 4px black;
}

.bg-image {
	display: inline-block;
	max-height: 455px;
	width: 100%;
}

.hidden {
	display: none;
}

// navbar
header {
	position: relative;
	h2 {
    background: transparent;
    color: #212C5C;
    position: absolute;
    bottom: -15%;
    text-align: center;
		width: 100%;
  }
  a {
    color: white;
  }
	.navbar.primary.sticky {
		background: rgba(78, 94, 169, 0.8);
		position: fixed;
		top: 0;
		z-index: 2;
		ul {
			background: transparent;
			border: none;
			margin: 0 auto;
			width: 90%;
		}
	}
  .navbar.secondary {
    display: grid;
    grid-template-columns: 1fr 1fr;
		position: absolute;
		left: 0;
		right: 0;
		top: 5;
		z-index: 1;

		h1 {
		  font-family: 'Handlee', 'Roboto', sans-serif;
			margin-left: 3.0rem;
			margin-top: 2.8rem;
			text-shadow: 3px 3px 6px black, 3px 3px 6px black, 3px 3px 6px black;
		}
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr;
			margin-left: 30%;
			margin-top: 1rem;
			width: 65%;
    }
		li {
      height: 125px;
      background-image: url(<%= asset_path('logo.png') %>);
      background-size: 125px;
      background-repeat: no-repeat;
			background-position: center;
			text-align: center;

			a {
				text-align: center;
				font-size: 1.10rem;
        position: relative;
        top: 25%;
      }
    }
  }
  .navbar.primary {
		position: absolute;
		top: 11rem;
		right: 0;
		left: 0;

		ul {
			border-bottom: 3px solid white;
			border-top: 3px solid white;
	    display: grid;
			grid-auto-flow: column;
			margin: 0 auto;
	    text-align: center;
			padding: 1rem 0;
	    width: 90%;
			font-size: 1.25rem;
  	}
	}
}
// Section banner photo
main {
	section:nth-of-type(1) {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 50vh;
    overflow: hidden;
    position: relative;
    z-index: -1;
  }
}

// small screen nav
.sm-nav {
	background: rgba(78, 94, 169, 0.8);
	position: fixed;
	top: 0;
	right: 0;
	left: 0;

	ul {
		border-top: 1px solid rgb(75,91,163);
		display: none;
		text-align: center;
		li {
			font-size: 1.25rem;
			padding: .2rem 0;
		}
	}

	a:first-of-type img, a:nth-of-type(2) img {
		margin-left: 3%;
	}

	a:first-of-type img {
		margin-bottom: 15px;
		margin-top: 15px;
		height: 45px;
	}

	a:nth-of-type(2) img {
		margin-bottom: 18px;
		margin-top: 18px;
		height: 39px;
	}

	a:nth-of-type(3) {
		font-family: 'Handlee', 'Roboto', sans-serif;
		font-size: 1.25rem;
		position: absolute;
		top: 2rem;
		right: 6.5rem;
	}

	a:nth-of-type(4) {
		img {
			position: absolute;
			top: 5px;
			right: 1.75rem;
			height: 65px;
		}
	}
}

// Footer
footer {
	background-color: #727DBA;
	padding: 1.5rem;
	ul {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		justify-items: center;
		margin-top: 2.50rem;
		pointer-events: all;
		z-index: 1000;
		li {
			height: 55px;
			width: 55px;
			a {
				background-size: 55px;
				background-repeat: no-repeat;
				border-radius: 50%;
				display: inline-block;
				height: 100%;
				text-indent: -10000px;
				width: 100%;
			}
		}

		li:first-of-type a {
			background-image: url(<%= asset_path('facebook.jpeg') %>);
		}

		li:nth-of-type(2) a {
			background-image: url(<%= asset_path('instagram.jpeg') %>);
		}

		li:nth-of-type(3) a {
			background-image: url(<%= asset_path('petportal.jpeg') %>);
		}

		li:last-of-type a {
			background-image: url(<%= asset_path('carecredit.jpeg') %>);
		}
	}

	section:first-of-type {
		figure {
			margin: 0 auto 1rem auto;
			width: 50%;
		}
		img {
			border-radius: 0%;
			display: inline-block;
			width: 100%;
		}
		aside {
			border: 1px solid black;
			h3 {
				text-align: left;
				padding-left: 1rem;
				padding-top: 1rem;
			}
		}
	}
	section:nth-of-type(2) {
		margin-top: 2%;
		text-align: center;
		aside {
			width: auto;
			margin: 0 auto;
			background-color: inherit;
			display: inline-block;
			margin-bottom: 5%;
			padding-top: 0;
			padding-left: 0;
			text-align: left;
			h4 {
				margin-bottom: .75rem;
				margin-top: 2rem;
			}

			dl {
				dt {
					width: 100px;
				}
				dd, dt {
					display: inline-block;
					font-size: .80rem;
				}
			}

			dl:nth-last-of-type(2), dl:last-of-type {
				margin-top: 1rem;

				dt, dd {
					display: block;
				}
				a {
					color: black;
				}
			}
		}
	}
}

@media (min-width: 0px) {
	body {
		padding-top: 5.0rem;
	}
	.lg-nav, .lg-nav + hr {
		display: none;
	}
}

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) {

}

// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
	footer {
		padding: 3rem;
		position: relative;
		z-index: -1;
		section:first-of-type {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			figure {
				margin: 0 auto;
				text-align: center;
				img {
					height: 125px;
					width: auto;
				}
			}
		}

		section:nth-of-type(2) {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			aside {
				margin-bottom: 0;
				h4 {
					text-align: center;
				}
			}
		}

		ul {
			display: inline-block;
			position: absolute;
			top: 23%;
			z-index: 1000;
			li {
				height: 55px;
				margin-bottom: 1.5rem;
				width: 55px;
				a {
					background-size: 55px;
				}
			}
		}
	}
}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
	body {
		padding-top: 0;
	}

	main {
		margin: 0 5%;
	}

	header {
		height: 425px;
	}

	.sm-nav {
		display: none;
	}

	.lg-nav, .lg-nav + hr {
		display: block;
	}
}

