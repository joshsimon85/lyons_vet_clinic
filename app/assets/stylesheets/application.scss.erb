// Whitespace reset
  /* http://meyerweb.com/eric/tools/css/reset/
    v2.0 | 20110126
    License: none (public domain)
  */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	 margin: 0;
	 padding: 0;
	 border: 0;
	 font-size: 100%;
	 font: inherit;
	 vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
	 display: block;
}
body {
	 line-height: 1;
}
ol, ul {
	 list-style: none;
}
blockquote, q {
	 quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	 content: '';
	 content: none;
}
table {
	 border-collapse: collapse;
	 border-spacing: 0;
}

// Box sizing reset
html {
  box-sizing: border-box;
  font-size: 16px;
}
*, *:before, *:after {
  box-sizing: inherit;
}

// fonts
//@import url('https://fonts.googleapis.com/css?family=Handlee&display=swap');

// global
a {
  text-decoration: none;
}

h1 {
	font-size: 3rem;
}

h2 {
	font-size: 2rem;
}

h3 {
	font-size: 1.5rem;
}

h4 {
	font-size: 1.25rem;
}

hr {
	background-color: black;
	height: 3px;
	margin: 2% 6%;
}

.bg-image {
	width: 100%;
	height: auto;
}

.hidden {
	display: none;
}

// navbar
header {
	position: relative;
  a {
    color: white;
  }
	.navbar.primary.sticky {
		background: rgba(78, 94, 169, 0.6);
		position: fixed;
		top: 0;

		ul {
			border: none;
		}
	}
  .navbar.secondary {
    display: grid;
    grid-template-columns: 1fr 1fr;
		position: absolute;
		left: 0;
		right: 0;
		top: 5;
		z-index: 1;

		h1 {
		  font-family: 'Handlee', 'Roboto', sans-serif;
			margin-left: 3.0rem;
			margin-top: 2.8rem;
    }
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
    }
		li {
      height: 125px;
      background-image: url(<%= asset_path('logo') %>);
      background-size: 125px;
      background-repeat: no-repeat;
			background-position: center;
			text-align: center;

			a {
				text-align: center;
				font-size: 1.10rem;
        position: relative;
        top: 25%;
      }
    }
  }
  .navbar.primary {
		position: absolute;
		top: 11rem;
		right: 0;
		left: 0;

		ul {
			border-bottom: 3px solid white;
			border-top: 3px solid white;
	    display: grid;
	    grid-template-columns: repeat(6, 1fr);
	    margin: 0 auto;
	    text-align: center;
			padding: 1rem 0;
	    width: 90%;
			font-size: 1.25rem;
  	}
	}
}

// small screen nav
.sm-nav {
	background: rgba(78, 94, 169, 0.6);

	ul {
		border-top: black;//rgb(75,91,163);
		text-align: center;
	}

	a:first-of-type img, a:nth-of-type(2) img {
		margin-left: 3%;
	}

	a:first-of-type img {
		margin-bottom: 15px;
		margin-top: 15px;
		height: 45px;
	}

	a:nth-of-type(2) img {
		margin-bottom: 18px;
		margin-top: 18px;
		height: 39px;
	}

	a:nth-of-type(3) {
		font-family: 'Handlee', 'Roboto', sans-serif;
		font-size: 1.25rem;
		position: absolute;
		top: 2rem;
		right: 6.5rem;
	}

	a:nth-of-type(4) {
		img {
			position: absolute;
			top: 5px;
			right: 1.75rem;
			height: 65px;
		}
	}
}

// Footer
footer {
	background-color: white;
	margin-right: 6%;
	margin-left: 6%;

	section {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
	}
	section:first-of-type {
		figure {
			text-align: left;
		}
		img {
			display: inline-block;
			text-align: left;
			width: 80%;
		}
		aside {
			border: 1px solid black;

			h3 {
				text-align: left;
				padding-left: 1rem;
				padding-top: 1rem;
			}
		}
	}
	section:nth-of-type(2) {
		margin-top: 2%;
		width: 100%;
		aside {
			padding-top: 0;
			padding-left: 0;
			background-color: inherit;
			text-align: left;

			h4 {
				margin-bottom: .75rem;
				margin-top: 2rem;
			}

			dl {
				dt {
					width: 100px;
				}
				dd, dt {
					display: inline-block;
					font-size: 1.15rem;
				}
			}

			dl:nth-last-of-type(2), dl:last-of-type {
				margin-top: 1rem;
				dt, dd {
					display: block;
				}
				a {
					color: black;
				}
			}

			ul {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				margin-top: 2.50rem;
				li {
					height: 75px;
					background-size: 75px;
					background-repeat: no-repeat;

					a {
						display: inline-block;
						height: 75px;
						text-indent: -10000px;
						width: 75px;
					}
				}

				li:first-of-type {
					background-image: url(<%= asset_path('facebook') %>);
				}

				li:nth-of-type(2) {
					background-image: url(<%= asset_path('instagram') %>);
				}

				li:nth-of-type(3) {
					background-image: url(<%= asset_path('petportal') %>);
				}

				li:last-of-type {
					background-image: url(<%= asset_path('carecredit') %>);
				}
			}
		}
	}
}

@media (min-width: 0px) {
	.lg-nav, .lg-nav + hr {
		display: none;
	}

	.sm-nav {
		outline: 1px solid red;
	}
}

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) {
	.sm-nav {
		outline: 1px solid green;
	}
}

// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
	.sm-nav {
		outline: 2px solid yellow;
	}
}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
	body {
	  margin: 0 5%;
	}

	.sm-nav {
		display: none;
	}

	.lg-nav, .lg-nav + hr {
		display: block;
	}

	body {
		outline: 1px solid yellow;
	}
}

