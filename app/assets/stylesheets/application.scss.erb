// header and navbar
header.collapsed {
	display: none;
	height: 55px;
}

header {
	position: relative;
	h2 {
    background: transparent;
    color: #212C5C;
    position: absolute;
    bottom: -15%;
    text-align: center;
		width: 100%;
  }
  a {
    color: white;
  }
	.active {
		border-bottom: 1px solid white;
	}
	.navbar.primary.sticky {
		background: rgba(78, 94, 169, 0.8);
		position: fixed;
		top: 0;
		z-index: 10;
	}
	.navbar.primary.sticky > ul {
		background: transparent;
		border: none;
		margin: 0 auto;
		width: 90%;
	}
  .navbar.secondary {
    display: grid;
    grid-template-columns: 1fr 1fr;
		position: absolute;
		left: 0;
		right: 0;
		top: 5;
		z-index: 1;

		h1 {
		  font-family: 'Handlee', 'Roboto', sans-serif;
			margin-left: 3.0rem;
			margin-top: 2.8rem;
			text-shadow: 3px 3px 6px black, 3px 3px 6px black, 3px 3px 6px black;
		}
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr;
			margin-left: 30%;
			margin-top: 1rem;
			width: 65%;
    }
		li {
      height: 125px;
      background-image: url(<%= asset_path('logo.png') %>);
      background-size: 125px;
      background-repeat: no-repeat;
			background-position: center;
			text-align: center;

			a {
				text-align: center;
				font-size: 1.10rem;
        position: relative;
        top: 25%;
      }
    }
  }
  .navbar.primary {
		position: absolute;
		top: 11rem;
		right: 0;
		left: 0;

		ul {
			border-bottom: 3px solid white;
			border-top: 3px solid white;
	    display: grid;
			grid-auto-flow: column;
			margin: 0 auto;
	    text-align: center;
			padding: 1rem 0;
	    width: 90%;
			font-size: 1.25rem;
			a {
				padding: .2rem 0;
			}
  	}
	}
}

// small screen nav
.sm-nav {
	background: rgba(78, 94, 169, 0.8);
	position: fixed;
	top: 0;
	right: 0;
	left: 0;
	z-index: 10;
	.hamburger_menu, .close {
		display: inline-block;
		margin-left: 3%;
		img {
			display: inline-block;
		}
	}
	.close.hidden, .hamburger_menu.hidden {
		display: none;
	}
	ul {
		border-top: 2px solid rgb(75,91,163);
		display: none;
		text-align: center;
		padding: .4rem 0;
		li {
			font-size: 1.25rem;
			padding: .4rem 0;
		}
	}

	a:first-of-type img, a:nth-of-type(2) img {
		margin-bottom: 20px;
		margin-top: 20px;
		height: 35px;
	}

	a:nth-of-type(2) img {
		margin-bottom: 21px;
		margin-top: 21px;
		height: 33px;
	}

	a:nth-of-type(3) {
		font-family: 'Handlee', 'Roboto', sans-serif;
		font-size: 1.35rem;
		margin-left: -100px;
		position: absolute;
		text-align: center;
		top: 2rem;
		left: 50%;
		width: 200px;
	}

	a:nth-of-type(4) {
		img {
			position: absolute;
			top: 5px;
			right: 1rem;
			height: 65px;
		}
	}
}

// Footer
footer {
	background-color: #727DBA;
	padding: 1.5rem;
	[data-id="prev"], [data-id="next"] {
		background: transparent;
		display: inline-block;
		height: 30px;
		width: 30px;
		position: absolute;
		top: 40%;
		z-index: 1;
	}
	[data-id="prev"] {
		left: -2%;
	}
	[data-id="next"] {
		right: -2%;
	}
	[data-toggle] {
		color: #4F4F4F;
		font-size: 20px;
	}
	[data-toggle].active {
		color: #cccccc;
	}
	ul {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		justify-items: center;
		margin-top: 2.50rem;
		li {
			height: 55px;
			width: 55px;
			a {
				background-size: 55px;
				background-repeat: no-repeat;
				border-radius: 50%;
				display: inline-block;
				height: 100%;
				text-indent: -10000px;
				width: 100%;
			}
		}

		li:first-of-type a {
			background-image: url(<%= asset_path('facebook.jpeg') %>);
		}

		li:nth-of-type(2) a {
			background-image: url(<%= asset_path('instagram.jpeg') %>);
		}

		li:nth-of-type(3) a {
			background-image: url(<%= asset_path('petportal.jpeg') %>);
		}

		li:last-of-type a {
			background-image: url(<%= asset_path('carecredit.jpeg') %>);
		}
	}

	section:first-of-type {
		img {
			border-radius: 0%;
			display: inline-block;
			width: 100%;
		}
		aside {
			padding: 0 2rem;
			position: relative;
			h3 {
				text-align: center;
				padding: .75rem 0;
			}
			.actions {
				padding-top: .5rem;
				text-align: center;
			}
		}
	}
	section:nth-of-type(2) {
		margin-top: 2rem;
		text-align: center;
		aside {
			width: auto;
			margin: 0 auto;
			background-color: inherit;
			display: inline-block;
			margin-bottom: 5%;
			padding-top: 0;
			padding-left: 0;
			text-align: left;
			h4 {
				margin-bottom: .75rem;
			}

			dl {
				dt {
					width: 100px;
				}
				dd, dt {
					display: inline-block;
					font-size: 1rem;
				}
			}

			dl:nth-last-of-type(2), dl:last-of-type {
				margin-top: 1rem;

				dt, dd {
					display: block;
				}
				a {
					color: black;
				}
			}
		}
	}
}

input, textarea, select {
	border: 1px solid #AFAFAF;
	border-radius: 5px;
}
input:focus, textarea:focus, select:focus {
	outline: none;
	border: 1px solid #727DBA;
	box-shadow: 0 0 1px 3px rgba(114, 125, 186, .7);
	box-shadow: 0 0 0 3px -moz-mac-focusring;
}

.btn {
	border: 2px solid #727DBA;
	border-radius: 5px;
	color: #727DBA;
	display: inline-block;
	font-size: 1rem;
	padding: .6rem 0;
	-webkit-appearance: none;
	-moz-appearance: none; appearance: none;
}

.btn.danger {
	border: 2px solid red;
	border-radius: 5px;
	color: red;
}

.btn:hover {
	cursor: pointer;
	background: #727DBA;
	color: white;
}

.btn.danger:hover {
	cursor: pointer;
	background: red;
	color: white;
}

select {
	display: block;
	font-size: 1rem;
	line-height: 1.3;
	padding: 5px 1.5rem 5px .75rem;
	box-sizing: border-box;
	margin: 0;
	box-shadow: 0 1px 0 1px rgba(0,0,0,.04);
	-moz-appearance: none;
	-webkit-appearance: none;
	appearance: none;
	background-color: #fff;
	background-image: url(<%= asset_url('caret-down.png') %>);
	background-repeat: no-repeat, repeat;
	background-position: right .5rem top 50%, 0 0;
	background-size: .5rem auto, 100%;
}
select::-ms-expand {
	display: none;
}
select:hover {
	border-color: #888;
}
select:focus {
	color: #222;
}
select option {
	font-weight:normal;
